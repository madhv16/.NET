@* This line is crucial. It tells the View what kind of data to expect. *@
@* It expects a collection (like a List) of Product objects. *@
@model IEnumerable<firstweb.Models.Product>

@{
    ViewData["Title"] = "Our Products";
}

<h1>Our Products</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<p>Here is a list of all the products we have in stock.</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @* This is a loop. It will go through each product in the Model (the list we passed from the controller) *@
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                @* We use .ToString("C") to format the price as currency (e.g., $1,200.00) *@
                <td>@product.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>